<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFF00"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/kamonegikun_rev305_512_512"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-3dp" />

    <Button
        android:id="@+id/btWebcam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_webcam"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="604dp" />

    <Button
        android:id="@+id/btInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_info"
        tools:layout_editor_absoluteX="233dp"
        tools:layout_editor_absoluteY="604dp" />

    <Button
        android:id="@+id/btHistoricSite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bt_historic_site"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="520dp" />
</androidx.constraintlayout.widget.ConstraintLayout>